<Window x:Class="UIDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="QuickFIXN UIDemo App"
    Height="300"
    Width="300"
    >
    <Grid>
        <StackPanel x:Name="ConnectionView" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Content="SessionID:"/>
                <Label Content="{Binding SessionString}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="Connected?"/>
                <Label Content="{Binding ConnectionStatus}"/>
            </StackPanel>
            <Button x:Name="bttnConnect" Content="Connect" Command="{Binding ConnectCommand}"/>
            <Button x:Name="bttnDisconnect" Content="Disconnect" Command="{Binding DisconnectCommand}"/>
        </StackPanel>
    </Grid>
</Window>
